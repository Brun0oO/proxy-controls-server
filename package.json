{
  "name": "proxy-controls-server",
  "version": "0.0.1",
  "description": "Service to proxy keyboard/gamepad controls between devices, peer-to-peer, over WebRTC.",
  "main": "server/proxy-controls-server.js",
  "browser": "client/src/lib/proxy-controls-client.js",
  "engines": {
    "node": "5.4.0"
  },
  "config": {
    "port": 3000
  },
  "scripts": {
    "start": "npm run prod",
    "test": "karma start ./tests/karma.conf.js",
    "build": "browserify client/src/app.js -o client/bundle.js && gzip -f client/bundle.js ",
    "prod": "npm run build && node index.js",
    "dev": "watchify client/src/app.js -o client/bundle.js -d & nodemon index.js",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/donmccurdy/proxy-controls-server.git"
  },
  "keywords": [
    "vr",
    "webvr",
    "webrtc",
    "gamepad",
    "keyboard",
    "aframe",
    "aframe-vr",
    "mozvr"
  ],
  "author": "Don McCurdy <dm@donmccurdy.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/donmccurdy/proxy-controls-server/issues"
  },
  "homepage": "https://github.com/donmccurdy/proxy-controls-server#readme",
  "devDependencies": {
    "envify": "^3.4.0",
    "nodemon": "^1.8.1",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "angular": "^1.4.8",
    "angular-route": "^1.4.8",
    "angular-sanitize": "^1.4.8",
    "angular-touch": "^1.4.8",
    "browserify": "^12.0.1",
    "bufferutil": "^1.2.1",
    "dotenv": "^2.0.0",
    "keyboardevent-key-polyfill": "^1.0.1",
    "koa": "^1.1.2",
    "koa-cors": "0.0.16",
    "koa-force-ssl": "0.0.5",
    "koa-route": "^2.4.2",
    "koa-static": "^2.0.0",
    "moniker": "^0.1.2",
    "socketpeer": "^1.0.2",
    "utf-8-validate": "^1.2.1"
  }
}
